<h2>Import</h2>

<%= form_tag import_courses_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag 'Import', class: "btn btn-primary" %>
<% end %>

<h2>Users</h2>
<% if @courses.any? %> 
  <table class="table table-bordered table-striped">
    <tr>
      <th>ID</th>
      <th>ClassID</th>
      <th>Note</th>
      <th>Enroll</th>
      <th>Timetable</th>
    </tr>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.courseID %></td>
        <td><%= course.note %></td>
        <td><%= course.enroll %></td>
        <td><%= course.timetable %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  Empty
<% end %>
