<% provide(:title, @user.name) %>
<div class="row">
  	<aside class="col-md-4">
    	<section class="user_info">
      	<h1>
	        <%= gravatar_for(current_user, size: 50) %>
	        <%= @user.name %>
      	</h1>
    	</section>

      <section class="entry_form">
        <%= render 'shared/entry_form' %>
      </section>
  	</aside>

    <div class="col-md-8">
    	<% if @user.entries.any? %>
	      	<h3>Entries (<%= @user.entries.count %>)</h3>
	      	<ol class="entries">
	        <%= render @entries %>
	      	</ol>
	      	<%= will_paginate @entries %>
    	<% end %>
  	</div>

</div>